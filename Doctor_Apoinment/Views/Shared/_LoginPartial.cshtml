@inject Microsoft.AspNetCore.Identity.SignInManager<Doctor_Apoinment.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="LogOff" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="text-white nav-link">Hello, @User.Identity.Name</li>
            <li><a class="text-white nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-brand">
        <li class="nav-item">
            <a class="nav-link text-black-50" asp-action="Register" asp-controller="Account" id="registerLink">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-black-50" asp-action="Login" asp-controller="Account" id="loginLink">Sign In</a>
        </li>
    </ul>
}
